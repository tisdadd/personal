{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "jsx": "react-jsx",
    "typeRoots": [
      "./src/types"
    ]
  },
  "include": [
    "src/**/*",
    "*.ts",
    "forge.config.ts",
    "e2e-tests/**/*",
    "jest/**/*",
    "*.js"
  ]
}